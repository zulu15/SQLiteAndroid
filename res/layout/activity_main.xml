<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sql.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/msg_ingrese_codigo"
            android:inputType="numberSigned" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edit_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/msg_ingrese_descripcion" />

        <EditText
            android:id="@+id/edit_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/msg_ingrese_precio"
            android:inputType="numberDecimal" />

        <Button
            android:onClick="alta"
            android:id="@+id/btn_alta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_alta" />

        <Button
            android:onClick="busquedaXcodigo"
            android:id="@+id/btn_search_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_search_codigo" />

        <Button
            android:onClick="busquedaXdescripcion"
            android:id="@+id/btn_search_descipcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_search_descripcion" />

        <Button
            android:onClick="bajaXcodigo"
            android:id="@+id/btn_baja_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_baja_codigo" />

        <Button
            android:onClick="listar"
            android:id="@+id/btn_modificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_listar"
           />
    </LinearLayout>

</ScrollView>